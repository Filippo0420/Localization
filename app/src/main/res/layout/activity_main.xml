<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/localization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Localization"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/cityCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Country City"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/localization"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/showDataBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityCountry"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="Show Localization"
        />

</RelativeLayout>